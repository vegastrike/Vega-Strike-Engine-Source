{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Default Config",
      "description": "Default build",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "debug": {
        "output": true
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "displayName": "Use Ninja generator",
      "generator": "Ninja",
      "inherits": "default"
    },
    {
      "name": "unix-makefiles",
      "hidden": true,
      "displayName": "Use Unix Makefiles generator",
      "generator": "Unix Makefiles",
      "inherits": "default"
    },
    {
      "name": "debug",
      "hidden": true,
      "displayName": "Debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LOG_TIME_TAKEN_DETAILS": true
      }
    },
    {
      "name": "release",
      "hidden": true,
      "displayName": "Release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "RelWithDebInfo",
      "hidden": true,
      "displayName": "RelWithDebInfo",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "pie-enabled",
      "hidden": true,
      "inherits": "default",
      "displayName": "PIE Enabled",
      "description": "Enable Position-Independent Executables (PIE)",
      "cacheVariables": {
        "ENABLE_PIE": true
      }
    },
    {
      "name": "pie-disabled",
      "hidden": true,
      "inherits": "default",
      "displayName": "PIE Disabled",
      "description": "Build with Position-Independent Executables (PIE) turned off",
      "cacheVariables": {
        "ENABLE_PIE": false
      }
    },
    {
      "name": "legacy-gl",
      "hidden": true,
      "inherits": "default",
      "displayName": "Legacy OpenGL",
      "cacheVariables": {
        "OpenGL_GL_PREFERENCE": {
          "type": "string",
          "value": "LEGACY"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "glvnd",
      "hidden": true,
      "inherits": "default",
      "displayName": "GLVND",
      "cacheVariables": {
        "OpenGL_GL_PREFERENCE": {
          "type": "string",
          "value": "GLVND"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "gl-neither",
      "hidden": true,
      "inherits": "default",
      "displayName": "GL-Neither",
      "cacheVariables": {
      }
    },
    {
      "name": "no-otel",
      "hidden": true,
      "displayName": "No OpenTelemetry-Cpp",
      "inherits": "default",
      "cacheVariables": {
        "FETCH_OPEN_TELEMETRY": false,
        "USE_OPEN_TELEMETRY": false
      }
    },
    {
      "name": "use-otel",
      "hidden": true,
      "displayName": "Use OpenTelemetry-Cpp",
      "inherits": "default",
      "cacheVariables": {
        "FETCH_OPEN_TELEMETRY": false,
        "USE_OPEN_TELEMETRY": true
      }
    },
    {
      "name": "fetch-use-otel",
      "hidden": true,
      "displayName": "Fetch and Use OpenTelemetry-Cpp",
      "inherits": "default",
      "cacheVariables": {
        "FETCH_OPEN_TELEMETRY": true,
        "USE_OPEN_TELEMETRY": true
      }
    },
    {
      "name": "macOS",
      "displayName": "macOS Default",
      "inherits": "default",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macOS-MacPorts",
      "hidden": true,
      "inherits": "default",
      "displayName": "macOS (MacPorts) Default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "environment": {
        "VERBOSE": "ON"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "cmake/MacPorts.cmake",
          "type": "FILEPATH"
        },
        "CMAKE_PREFIX_PATH": "/opt/local",
        "Boost_INCLUDE_DIR": "/opt/local/libexec/boost/1.87/include",
        "Boost_DIR": "/opt/local/libexec/boost/1.87/lib/cmake/Boost-1.87.0",
        "CMAKE_FIND_FRAMEWORK": "LAST",
        "INSTALL_GTEST": "OFF",
        "USE_GTEST": "OFF"
      }
    }
  ]
}
