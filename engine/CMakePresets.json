    {
      "name": "pie-enabled",
      "hidden": true,
      "inherits": "default",
      "displayName": "PIE Enabled",
      "description": "Enable Position-Independent Executables (PIE)",
      "cacheVariables": {
        "ENABLE_PIE": true
      }
    },
    {
      "name": "pie-disabled",
      "hidden": true,
      "inherits": "default",
      "displayName": "PIE Disabled",
      "description": "Build with Position-Independent Executables (PIE) turned off",
      "cacheVariables": {
        "ENABLE_PIE": false
      }
    },
    {
      "name": "legacy-gl",
      "hidden": true,
      "displayName": "Legacy OpenGL",
      "cacheVariables": {
        "OpenGL_GL_PREFERENCE": {
          "type": "string",
          "value": "LEGACY"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
