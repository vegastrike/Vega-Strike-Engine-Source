function bootstrapOnCentOS ()
{
  case "${LINUX_VERSION_ID}" in
    "8")
      dnf -y install dnf-plugins-core
      dnf -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm
      dnf config-manager --set-enabled PowerTools
      dnf -y install \
                          git \
                          cmake \
                          boost-devel \
                          boost-python3-devel \
                          freeglut-devel \
                          gcc-c++ \
                          openal-soft-devel \
                          SDL-devel \
                          SDL2-devel \
                          libvorbis-devel \
                          libjpeg-turbo-devel \
                          libpng-devel \
                          expat-devel \
                          gtk3-devel \
                          python3-devel \
                          rpm-build \
                          make \
                          clang
      ;;
    "8.0")
      dnf -y install dnf-plugins-core
      dnf -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm
      dnf config-manager --set-enabled PowerTools
      dnf -y install \
                          git \
                          cmake \
                          boost-devel \
                          boost-python3-devel \
                          freeglut-devel \
                          gcc-c++ \
                          openal-soft-devel \
                          SDL-devel \
                          SDL2-devel \
                          libvorbis-devel \
                          libjpeg-turbo-devel \
                          libpng-devel \
                          expat-devel \
                          gtk3-devel \
                          python3-devel \
                          rpm-build \
                          make \
                          clang
      ;;
    *)
      echo "Sorry, this version of CentOS is unsupported"
      exit 2
      ;;
  esac
}

