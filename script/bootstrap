function bootstrapOnRockyLinux ()
{
  case "${LINUX_VERSION_ID}" in
    "8.0")
      dnf -y install dnf-plugins-core
      dnf -y install epel-release
      dnf config-manager --enable epel
      dnf config-manager --set-enabled powertools
      dnf -y update
      dnf -y install \
                          git \
                          cmake \
                          boost-devel \
                          boost-python3-devel \
                          freeglut-devel \
                          gcc-c++ \
                          openal-soft-devel \
                          SDL-devel \
                          SDL2-devel \
                          libvorbis-devel \
                          libglvnd-devel \
                          libjpeg-turbo-devel \
                          libpng-devel \
                          expat-devel \
                          gtk3-devel \
                          python3-devel \
                          rpm-build \
                          make \
                          clang
      ;;
    "8.1")
      dnf -y install dnf-plugins-core
      dnf -y install epel-release
      dnf config-manager --enable epel
      dnf config-manager --set-enabled powertools
      dnf -y update
      dnf -y install \
                          git \
                          cmake \
                          boost-devel \
                          boost-python3-devel \
                          freeglut-devel \
                          gcc-c++ \
                          openal-soft-devel \
                          SDL-devel \
