function bootstrapOnFedora ()
{
  case "${LINUX_VERSION_ID}" in
    30)
      dnf install -y \
                          git \
                          cmake \
                          boost-devel \
                          boost-python3-devel \
                          freeglut-devel \
                          gcc-c++ \
                          openal-soft-devel \
